# Travel Agent Backend Environment Variables

# ==================================
# Core settings
# ==================================
APP_NAME="Travel Planning Assistant"
HOST="0.0.0.0"
PORT=8000
LOG_LEVEL="INFO"  # INFO, DEBUG, WARNING, ERROR
ENV="development"  # development, production

# ==================================
# Google AI settings
# ==================================
# For Direct API mode (required if GOOGLE_GENAI_USE_VERTEXAI=0)
GOOGLE_API_KEY=""

# Model selection
GOOGLE_GENAI_MODEL="gemini-2.0-flash"  # Options: gemini-2.0-flash, gemini-2.0-pro, etc.

# ADK mode toggle
GOOGLE_GENAI_USE_VERTEXAI="0"  # Set to "1" to use Vertex AI with ADK
                              # Set to "0" to use Direct API mode

# ==================================
# Vertex AI specific settings
# ==================================
# Only needed if GOOGLE_GENAI_USE_VERTEXAI=1
# Path to service account JSON key file
GOOGLE_APPLICATION_CREDENTIALS="/path/to/your-project-credentials.json"

# Google Cloud project settings
GOOGLE_CLOUD_PROJECT=""  # Your Google Cloud project ID
VERTEX_AI_REGION="us-central1"  # Vertex AI region

# ==================================
# Search API settings (optional)
# ==================================
# Tavily API key for enhanced search capabilities
TAVILY_API_KEY=""

# YouTube API key for video insights
YOUTUBE_API_KEY=""

# ==================================
# Session state settings
# ==================================
DEFAULT_LANGUAGE="th"
DEFAULT_CURRENCY="THB"
SESSION_STORAGE_TYPE="memory"  # Options: memory, redis, firestore (future)
SESSION_STORAGE_URL=""  # Only needed for redis or firestore

# ==================================
# Logging settings
# ==================================
TRAVEL_AGENT_LOG_LEVEL="INFO"  # Override log level for travel agent components
